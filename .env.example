# Server configuration
PORT=3100
SERVER_URL=http://localhost:3100

# Timezone configuration
TIME_ZONE=America/Chicago

# Jira Service Manager API configuration
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token
JIRA_CLOUD_ID=your_jira_cloud_id
JIRA_HOST_URL=https://api.atlassian.com
JIRA_BASE_PATH=rest/servicedeskapi

# SQL Database Configuration
SQL_SERVER=your_sql_server
SQL_DATABASE=your_database
SQL_PORT=1433
SQL_ENCRYPT=false
SQL_TRUST_SERVER_CERT=true
SQL_TABLE=dbo.PhoneDirectory

# SQL Authentication (choose one)
# Option 1: SQL Server Authentication
SQL_AUTH_MODE=sql
SQL_USERNAME=your_sql_username
SQL_PASSWORD=your_sql_password

# Option 2: Windows Authentication
# SQL_AUTH_MODE=windows
# SQL_DOMAIN=DOMAIN
# SQL_TRUSTED_CONNECTION=true

# Fallback Configuration
USE_TEMP_FILE=false
TEMP_FILE=phone-list.csv
DEFAULT_PHONE_NUMBER=15555555555